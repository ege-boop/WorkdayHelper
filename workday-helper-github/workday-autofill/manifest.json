{
  "manifest_version": 3,
  "name": "Workday Application Helper",
  "version": "1.0",
  "description": "Auto-answers questions on Workday job applications",
  "permissions": ["activeTab", "storage"],
  "host_permissions": [
    "*://*.myworkdayjobs.com/*",
    "*://*.workday.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.myworkdayjobs.com/*",
        "*://*.workday.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
